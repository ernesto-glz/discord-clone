{
  "name": "discord-clone-backend",
  "version": "1.0.0",
  "description": "Chat App made with socket.io",
  "author": "Ernesto Gonzalez <kik0swd@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production NODE_PATH=dist node dist/start.js",
    "dev": "cross-env NODE_ENV=development NODE_PATH=src ts-node-dev src/start.ts",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "build": "tsc -p tsconfig.json",
    "test": "cross-env NODE_ENV=test jest --silent --maxWorkers=1",
    "test:watch": "npm test -- --watch"
  },
  "dependencies": {
    "@discord/types": "file:../types",
    "bcrypt": "5.0.1",
    "cross-env": "7.0.3",
    "dotenv": "16.0.0",
    "express": "4.18.0",
    "express-async-router": "0.1.15",
    "express-mongo-sanitize": "2.2.0",
    "express-validator": "6.14.0",
    "helmet": "5.0.2",
    "http-status": "1.5.2",
    "jsonwebtoken": "8.5.1",
    "mongoose": "6.3.1",
    "mongoose-paginate-v2": "1.6.3",
    "socket.io": "4.5.0"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "4.17.13",
    "@types/jest": "27.5.1",
    "@types/jsonwebtoken": "8.5.8",
    "@types/node": "^18.0.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.22.0",
    "@typescript-eslint/parser": "5.22.0",
    "eslint": "8.14.0",
    "jest": "28.1.0",
    "prettier": "2.6.2",
    "supertest": "6.2.3",
    "ts-jest": "28.0.2",
    "ts-node-dev": "1.1.8",
    "typescript": "4.6.3"
  }
}
