{
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "compilerOptions": {
    "strict": true,
    "target": "es2016",
    "lib": ["ES2020", "ES2019"],
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": false,
    "noEmit": false,
    "sourceMap": false,
    "declaration": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": { "@discord/types": ["../../types/main.ts"] }
  },
  "include": ["src", "**/*.ts", "types"]
}
